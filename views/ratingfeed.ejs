<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ratingfeed</title>
    <link rel="stylesheet" href="/stylesheets/rating.css">
    <link rel="stylesheet" href="/logsin/ratfeedm.css">
</head>

<body>
    <h1 id="h11">Rate you fav player</h1>
    
   
      <div class="warp">
          <% playerData.forEach(data =>{%>
          <div class="recipe-card">
              <img class="recipe-preview" src="/images/uploads/playerDP/<%=data.image%>" alt="noodle" />
              <h1 class="recipe-title"><%=data.name%></h1>
              <div class="recipe-infos">
                <span class="spn"><%= data.ratings%><p>hearts</p></span> 
                <span><%=data.users.length%><p>ratings</p></span>
               
             
              </div>
              <div class="rating">
                <ul id="ph">
                  <% for (let i = 0; i < 5; i++) { %>
                    <li class="heart">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"
                            height="40px" width="40px" version="1.1" id="Capa_1" viewBox="0 0 50 50"
                            xml:space="preserve" style="fill: <%= i < data.ratings ? 'red' : '#1a1a1a' %>;">
                            <path
                                d="M24.85,10.126c2.018-4.783,6.628-8.125,11.99-8.125c7.223,0,12.425,6.179,13.079,13.543  c0,0,0.353,1.828-0.424,5.119c-1.058,4.482-3.545,8.464-6.898,11.503L24.85,48L7.402,32.165c-3.353-3.038-5.84-7.021-6.898-11.503  c-0.777-3.291-0.424-5.119-0.424-5.119C0.734,8.179,5.936,2,13.159,2C18.522,2,22.832,5.343,24.85,10.126z" />
                            <path style="fill: #ffffff;"
                                d="M6,18.078c-0.553,0-1-0.447-1-1c0-5.514,4.486-10,10-10c0.553,0,1,0.447,1,1s-0.447,1-1,1  c-4.411,0-8,3.589-8,8C7,17.631,6.553,18.078,6,18.078z" />
                        </svg>
                    </li>
                <% } %>
                  
      
              </ul>
              </div>
              
              <button class="recipe-start">
                <a href="/player/<%=data.id%>">Rate Now</a> 
              </button>
            </div>
          <%})%>
      </div>
  
    
</body>
